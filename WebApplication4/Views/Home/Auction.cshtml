
@{
    ViewBag.Title = "Auction";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title>3 Auctioneers</title>
</head>
<body>
    <div class="row">
        <div class="col-md-10">

            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <div class="col-md-6">
                            <img src="~/Images/la.jpg" alt="Los Angeles" width="300" height="300">
                        </div>
                        <div class="col-md-6">
                            <p> This is where cool things will be</p>
                        </div>
                    </div>

                    <div class="item">
                        <div class="col-md-6">
                            <img src="~/Images/chicago.jpg" alt="Chicago" width="300" height="300">
                        </div>
                        <div class="col-md-6">
                            <p>This is where the next cool things will be</p>
                        </div>
                    </div>

                    <div class="item">
                        <div class="col-md-6">
                            <img src="~/Images/ny.jpg" alt="New York" width="300" height="300">
                        </div>
                        <div class="col-md-6">
                            <p>This is whewre the previous cool things will be</p>
                        </div>
                    </div>
                    </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-2">
            <form method="get">
                BID <br />
                <input type="number" name="bidAmount" pattern="[0-9]{9999}" required><br />
                <input type="submit" name="sub"><br /><br />
            </form>
        </div>
    </div>
</body>
</html>
