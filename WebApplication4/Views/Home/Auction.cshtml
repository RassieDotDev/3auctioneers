
@{
    ViewBag.Title = "Auction";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title>3 Auctioneers</title>
</head>
<body>
    <div class="row">
        <div class="col-md-10">

            <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
            <script type="text/javascript" src="slick/slick.min.js"></script>
            <script>

                $(document).ready(function () {
                    $('.your-class').slick({
                        setting-name: setting-value
                    });
                });

                $('.slider-for').slick({
                    slidesToShow: 1,
                    slidesToScroll: 1,
                    arrows: false,
                    fade: true,
                    asNavFor: '.slider-nav'
                });
                $('.slider-nav').slick({
                    slidesToShow: 3,
                    slidesToScroll: 1,
                    asNavFor: '.slider-for',
                    dots: true,
                    centerMode: true,
                    focusOnSelect: true
                });

            </script>
        </div>
        <div class="col-md-2">
            <form method="get">
                BID <br />
                <input type="number" name="bidAmount" pattern="[0-9]{9999}" required><br />
                <input type="submit" name="sub"><br /><br />
            </form>
        </div>
    </div>
</body>
</html>
