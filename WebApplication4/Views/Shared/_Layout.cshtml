<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 3 Auctioneers</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <div class="header">
        <div class="header-text">
            <h1 style="font-family: Montserrat; text-transform: uppercase; color: white; font-weight: 500; padding-top: 10%;">3 Auctioneers</h1>
            <p style="font-family: Montserrat; text-transform: uppercase; color: white; font-weight: 600; padding-bottom: 10%;">
                Bid Farewell To High Prices.
            </p>
        </div>
    </div>
    <div class="navbar navbar-inverse " style="padding-top:10px; border-radius:0; box-shadow: 0px 5px 15px #666;">
        <div class="container">
            <div class="navbar-header pull-left">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <text style="font-weight:normal;font-family:sans-serif;font-size:18pt; color: #ddd; ">
                   
                    @{ if (Session["user_name"] != null && Session["isActive"] != null)
                        {
                    <legend style="border: none !important;">

                        Welcome @Session["user_name"].ToString()
                    </legend>
                            }
                            else
                            {

                                Response.Redirect("~/Login/Login");

                            } }
                </text>
            </div>
            <div class="navbar-collapse collapse" >
                <ul class="nav navbar-nav pull-right">
                   
                        <li style="display: inline-block;"> 
                            <fieldset>
                                @{ if (Session["user_name"] != null && Session["isActive"] != null)
                                {
                                <legend style="border: none !important;">
                                    @Html.ActionLink("Live Auction", "Auction", "Home", null, new { @class = "", @style = "font-size:14px;text-align:center; color: #999; text-decoration: none; padding: 10px;" })

                                    @Html.ActionLink("Catalogue", "Index", "Item_table", null, new { @class = "", @style = "font-size:14px;text-align:center; color: #999; text-decoration: none; padding: 10px;" })

                                    @Html.ActionLink("Add Item", "Create", "Item_table", null, new { @class = "", @style = "font-size:14px;text-align:center; color: #999; text-decoration: none; padding: 10px;" })

                                    @Html.ActionLink("Logout", "Login", "Login", null, new { @class = "", @style = "font-size:14px;text-align:center; color: #999; text-decoration: none; border: 1px solid #fff; padding: 10px;" })


                                </legend>
                            }
                            else
                            {

                            Response.Redirect("~/Login/Login");

                            }
                                }
                            </fieldset>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</head>
<body>

    <div class="container body-content">
        @RenderBody()
        
        <footer>
            <hr />
            <p>&copy; @DateTime.Now.Year - 3 Auctioneers</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
