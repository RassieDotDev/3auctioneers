<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 3 Auctioneers</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <div class="header">
        <div class="header-text">
            <h1 style="font-family: Montserrat; text-transform: uppercase; color: white; font-weight: 500;">3 Auctioneers</h1>
            <p style="font-family: Montserrat; text-transform: uppercase; color: white; font-weight: 600;">
                Bid Farewell To High Prices.
            </p>
        </div>
    </div>
</head>
<body>
    <div class="container body-content">
        @RenderBody()
        
        <footer>
            <hr />
            <p>&copy; @DateTime.Now.Year - 3 Auctioneers</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
