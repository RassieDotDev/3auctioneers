@model WebApplication4.Models.Item_table
@{
    ViewBag.Title = "AddItem";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html>
<head>

    <title>3 Auctioneers</title>
</head>
<body>

    <div class="row" id="add-item-row">
        <div class="col-md-9" id="add-item-left">
            <div class="box box-danger">
                <div class="box-header with-border">
                    <div class="avatar-row">
                        <!--Cover Image background, ineditable-->
                        <h3 style="color:#ffffff;text-align:center !important;">Add Item</h3>
                    </div>

                </div>
            </div>
            <div class="col-md-6">
                @using (Html.BeginForm("Create",
                                       "Item_table",
                                       FormMethod.Post,
                    new { enctype = "multipart/form-data" }))
                {
            <label> Name:</label>
                @Html.EditorFor(model => model.prod_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.prod_name, "", new { @class = "text-danger" })
                <label>Starting Bid:</label>
                @Html.EditorFor(model => model.prod_sbid, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.prod_sbid, "", new { @class = "text-danger" })
                <label>Description:</label>
                @Html.EditorFor(model => model.prod_des, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.prod_des, "", new { @class = "text-danger" })

                
                @Html.AntiForgeryToken()
                <label for="file">Upload Image:</label>
                <input type="file" name="file" id="file" /><br><br>
                <input class="btn" id="submit-item" type="submit" name="sub" value="Submit" />
                <br><br>
                @ViewBag.Message
                }

   
            </div>

            
        </div>
        <div class="col-md-3">

        </div>
    </div>
</body>
</html>





